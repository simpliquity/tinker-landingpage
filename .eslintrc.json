{
    "parser": "babel-eslint",
    "extends": ["prettier"],
    "plugins": [
        "react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "rules": {
        "strict": 0,
        "quotes": 0,
        "no-undef": 1,
        "no-unused-vars": 1,
        "camelcase": 0,
        "no-underscore-dangle": 0,
        "indent": ["warn", 4, {"SwitchCase":1}],
        "react/jsx-uses-react": "error",   
        "react/jsx-uses-vars": "error",
        "react/jsx-no-undef": [2, { "allowGlobals": true }]
    }
}
